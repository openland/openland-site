mixin intro--row (features)
	.intro--row&attributes(attributes)
		each feature in features
			.intro--feature= feature

mixin features--item (icon, title, text)
	.features--item&attributes(attributes)
		.features--icon: img(src='/img/' + icon alt="")
		.features--title!= title
		.features--text!= text

mixin footer--col (title, links)
	.footer--col&attributes(attributes)
		.footer--title= title

		ul.footer--links
			each link in links
				if (link[2])
					li: a(href=link[0] target="_blank")!= link[1]
				else
					li: a(href=link[0])!= link[1]

mixin member (photo, name, position, linkedin, mail)
	.member&attributes(attributes)
		.member--photo: img(src=photo alt="")
		.member--name!= name
		.member--position!= position
		.member--links
			a(href=linkedin).member--link: i.icon-lin
			a(href='mailto:' + mail).member--link #[i.icon-mail]#{mail}

mixin position (title, info, link)
	.position&attributes(attributes)
