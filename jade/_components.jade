mixin content--wrap (links)
	.content--wrap&attributes(attributes)
		.content--side: .content--menu: ul
			each link, i in links
				li(class=(i == 0) ? 'is-active' : ''): a(href='#block' + (i + 1)).js-scrollto!= link

		.content--box
			block