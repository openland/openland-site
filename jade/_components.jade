mixin header (active)
	header.header&attributes(attributes): .container: .header--in
		a(href=links.home).header--logo: img(src="img/logotype.svg" alt="")
		a(href="#").header--open

		nav.header--nav: ul.header--list
			if (active == 1)
				li.header--item.is-active: span Builders
			else
				li.header--item: a(href=links.builders) Builders

			if (active == 2)
				li.header--item.is-active: span Owners
			else
				li.header--item: a(href=links.owners) Owners

			if (active == 3)
				li.header--item.is-active: span About
			else
				li.header--item: a(href=links.about) About

		.header--btn: a(href=links.signin data-app="true" data-app-label="Go to the app" data-app-url=links.app).btn Sign in
		.header--btn: a(href=phoneTel).btn.is-grey #[i.icon-phone]#{phone}

mixin footer
	footer.footer&attributes(attributes)
		.container: .footer--box
			.footer--col.hidden-xs
				.footer--logo: img(src="img/logotype.svg" alt="")

				a(href=links.careers).footer--hire We are hiring!

				.visible-sm: +footer--socials

			+footer--col ('Solutions', [[links.builders, 'Builders'], [links.owners, 'Owners']])
			+footer--col ('Company', [[links.about, 'About'], [links.careers, 'Careers', true]])
			+footer--col ('Legal', [[links.privacy, 'Privacy Policy'], [links.terms, 'Terms of Service']])
			+footer--col ('Contacts', [[phoneTel, '<i class="icon-phone"></i>' + phone], [mailTo, '<i class="icon-mail"></i>' + mail]])

			.footer--col.hidden-sm: +footer--socials

		.footer--info.hidden-xs &copy; 2018 Data Makes Perfect Inc.#[span Build in San Francisco]

mixin footer--socials
	.footer--socials&attributes(attributes)
		a(href=socials.linkedin target="_blank").footer--social: i.icon-lin
		a(href=socials.facebook target="_blank").footer--social: i.icon-fb
		a(href=socials.twitter target="_blank").footer--social: i.icon-tw
		a(href=socials.angellist target="_blank").footer--social: i.icon-al

mixin signup
	.signup(data-signup="box")&attributes(attributes)
		.signup--variant.is-shown(data-signup="google")
			a(href=links.signup + '?google=true').btn.is-block.is-blue #[i.icon-google]Sign up with Google
			a(href="#" data-signup="toggle" data-variant="mail").signup--link Sign up with Email

		.signup--variant(data-signup="mail")
			form(method="GET" action=links.signup).signup--form
				input(type="text" name="email" placeholder="Email").signup--input
				button(type="submit").signup--submit Sign up

			a(href=links.signup + '?google=true').signup--link Sign up with Google

