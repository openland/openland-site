mixin header (active)
	header.header&attributes(attributes): .container: .header--in
		+logo ('header', links.home)

		a(href="#").header--open

		nav.header--nav: ul.header--list
			if (active == 1)
				li.header--item.is-active: span Messenger
			else
				li.header--item: a(href=links.messenger) Messenger

			if (active == 2)
				li.header--item.is-active: span About
			else
				li.header--item: a(href=links.about) About

		.header--apps
			-// a(href=links.google).header--app: i.icon-android
			.header--app #[i.icon-android]#[.tooltip Coming soon]
			a(href=links.apple target="_blank").header--app: i.icon-ios

		.header--btn: a(href=links.signin data-app="true" data-app-label="Go to the app" data-app-url=links.app data-style="electric").btn Sign in

mixin footer
	footer.footer&attributes(attributes)
		.container
			.footer--box.hidden-xs
				.footer--col
					+logo ('footer')
					+footer--socials

				+footer--col ('Company', [[links.about, 'About'], [links.careers, 'Careers', true]])
				+footer--col ('Legal', [[links.privacy, 'Privacy Policy'], [links.terms, 'Terms of Service']])
				+footer--col ('Contacts', [[phoneTel, '<i class="icon-phone"></i>' + phone], [mailTo, '<i class="icon-mail"></i>' + mail]])

				.footer--col
					.footer--title Mobile apps
					.footer--apps
						a(href=links.apple target="_blank").footer--app.is-apple
						-// a(href=links.google).footer--app.is-google
						span.footer--app.is-google: .tooltip Coming soon

			.footer--wrapper.visible-xs
				+logo ('footer')

				.footer--box
					+footer--col ('Company', [[links.about, 'About'], [links.careers, 'Careers', true]])
					+footer--col ('Contacts', [[phoneTel, '<i class="icon-phone"></i>' + phone], [mailTo, '<i class="icon-mail"></i>' + mail]])
					+footer--col ('Legal', [[links.privacy, 'Privacy Policy'], [links.terms, 'Terms of Service']])

					.footer--col
						.footer--title Mobile apps
						.footer--apps
							a(href=links.apple target="_blank").footer--app.is-apple
							-// a(href=links.google).footer--app.is-google
							span.footer--app.is-google

				+footer--socials

		.footer--info &copy; 2018 Data Makes Perfect Inc.#[span Built in San Francisco]

mixin logo (box, href)
	if (href)
		a(href=href class=box + '--logo')
			img(src="img/logotype.svg" alt="").is-default
			img(src="img/logotype-hover.svg" alt="").is-hover
	else
		div(class=box + '--logo')
			img(src="img/logotype.svg" alt="").is-default
			img(src="img/logotype-hover.svg" alt="").is-hover

mixin footer--socials
	.footer--socials&attributes(attributes)
		a(href=socials.linkedin target="_blank").footer--social: i.icon-lin
		a(href=socials.facebook target="_blank").footer--social: i.icon-fb
		a(href=socials.twitter target="_blank").footer--social: i.icon-tw
		a(href=socials.angellist target="_blank").footer--social: i.icon-al

mixin signup
	.signup(data-signup="box")&attributes(attributes)
		.signup--variant.is-shown(data-signup="google"): .signup--btns
			.signup--btn: a(href=links.signup + '?google=true' data-style="primary").btn.is-block #[i.icon-google]Sign up with Google
			.signup--btn: a(href="#" data-signup="toggle" data-variant="mail" data-style="ghost").btn.is-block #[i.icon-mail]Sign up with Email

		.signup--variant(data-signup="mail")
			form(method="GET" action=links.signup).signup--form
				input(type="text" name="email" placeholder="Email").signup--input
				button(type="submit").signup--submit Sign up

			a(href=links.signup + '?google=true').signup--link Sign up with Google

mixin menu (active)
	.menu&attributes(attributes)
		a(href="#").menu--close

		.menu--in: .container
			ul.menu--list
				if (active == 1)
					li.menu--item.is-active: span Messenger
				else
					li.menu--item: a(href=links.messenger) Messenger

				if (active == 2)
					li.menu--item.is-active: span About
				else
					li.menu--item: a(href=links.about) About

				br
				li.menu--item: a(href=links.signin) Sign in

		.menu--apps
			-// a(href=links.google).menu--app: i.icon-android
			.menu--app #[i.icon-android]#[.tooltip Coming soon]
			a(href=links.apple).menu--app: i.icon-ios

