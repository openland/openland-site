mixin form (btn)
	form(method="POST" action="").form&attributes(attributes)
		input(type="text" placeholder="E-mail").form--input
		button(type="submit").form--submit= btn

mixin feature (icon, title, text)
	.feature&attributes(attributes)
		.feature--icon: i(class='icon-feature-0' + icon)
		.feature--title= title
		.feature--text= text